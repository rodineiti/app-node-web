<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
  >
    <h1>Edit client</h1>

  </div>
  <div class="row">
    <div class="col">
      <div class="row">
        <div class="col-3">
          <form id="form-client" method="post" action="/clients/update">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="{{client.name}}"
              />
            </div>
            <input
              type="hidden"
              class="form-control"
              id="id"
              name="id"
              value="{{client.id}}"
            />
            <button
              type="submit"
              id="btn-submit"
              class="btn btn-primary"
            >Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>